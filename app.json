{
  "expo": {
    "name": "Campus Helper",
    "slug": "campus-helper",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1582ff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1582ff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.minkhantzaw.campushelper"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      "react-native-maps"
    ],
    "extra": {
      "eas": {
        "projectId": "a08ccf8b-cb64-43f3-a445-aba8566872e9"
      }
    }
  }
}
